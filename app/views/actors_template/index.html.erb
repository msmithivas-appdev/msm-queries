<h1>List of all actors</h1>

<a href="/actors">Go back</a>

<table border="1">

<tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>


<% $list_of_actors.each do |actor| %>
<% @actor_id = actor.id %>
<tr>
  
  <td> <%= actor.id %></td>
  <td> 
   <img src="http://robohash.org/<%= actor.image%>">
  </td>
  <td> <%= actor.name %></td>
  <td> <%= actor.dob %></td>
  <td> <a href="/actors/<%= @actor_id %> ">Show details</a></td>
  
</tr>

<% end %>

</table>
