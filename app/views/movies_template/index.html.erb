<h1>List of all movies</h1>

<table border="1">

<%  @list_of_movies.each do |a_movie| %>


<tr>
  <td> <%= a_movie.id %></td>
  <td> 
   <img src="http://robohash.org/<%=a_movie.image%>">
  </td>
  <td> <%= a_movie.title %></td>
  <td> <%= a_movie.year %></td>
  <td> <% @dir_id = @list_of_directors.where({ :id => a_movie.director_id}).at(0)  %>
       <% @dir_name = @dir_id.fetch("name")%>
      <%= @dir_name %>
  </td>
  <td> <a href="/movies/<%=a_movie.id %> ">Show details</a></td>
</tr>

<% end %>

</table>
